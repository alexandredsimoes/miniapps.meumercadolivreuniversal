                        </StackPanel>
                        <Button Grid.Row="3" x:Name="CompletarCompraButton" Grid.ColumnSpan="2" Content="Completar a compra" HorizontalAlignment="Stretch" Margin="0,10,0,0" FontWeight="Bold" Visibility="Collapsed"/>

                    </Grid>
                </Border>

                <!--Detalhe do vendedor-->

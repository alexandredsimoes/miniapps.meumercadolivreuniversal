                            <TextBlock TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}">
								<Run Text="{Binding OrderInfo.seller.phone.area_code}" />
								<Run Text="{Binding OrderInfo.seller.phone.number}" />
                            </TextBlock>
                            <TextBlock Text="{Binding OrderInfo.seller.email}" TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}" />
                        </StackPanel>
                        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="#2B000000" BorderThickness="0,0.6,0,0" Margin="0,10,0,0" />

                            <TextBlock x:Name="ShipMethodTextBlock" TextWrapping="Wrap"  Style="{StaticResource BodyTextBlockStyle}" FontFamily="ms-appx:/Fonts/Roboto-Medium.ttf#Roboto Medium" >

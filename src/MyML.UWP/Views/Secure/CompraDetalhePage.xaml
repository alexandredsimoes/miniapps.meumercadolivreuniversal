    x:Name="This">

    <Page.Resources>
        <converters:NullToVisibilitConverter x:Key="NullToVisibilitConverter"/>
        <converters:InverterNullToVisibilityConverter x:Key="InverterNullToVisibilityConverter"/>

        <converters:ObjetctToPropertyConverter x:Key="ObjetctToPropertyConverter" />
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter" />
        <convertersML:OrderStatusToStringConverter x:Key="OrderStatusToStringConverter" />
        <convertersML:OrderPaymentTypeConverter x:Key="OrderPaymentTypeConverter" />
        <convertersML:OrderPaymentStatusDetailConverter x:Key="OrderPaymentStatusDetailConverter" />
        <convertersML:OrderShipStatusDetailConverter x:Key="OrderShipStatusDetailConverter" />
        <convertersML:FeedbackRatingConverter x:Key="FeedbackRatingConverter" />

        <!--<Style TargetType="Button">
            <Setter Property="DataTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="Red"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->
    </Page.Resources>

    <Page.DataContext>
        <Binding Source="{StaticResource Locator}" Path="CompraDetalhePage" />
    </Page.DataContext>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>

            <VisualStateGroup x:Name="VisualsStateGroup">
                <!--Exibe ou oculta alguns controls de acordo com o SHIPPING da compra -->
                <VisualState x:Name="VisualsShipping">
                    <VisualState.Setters>
                        <Setter Target="ShipDateTextBlock.Visibility" Value="Visible"/>
                        <Setter Target="ShipMethodTextBlock.Visibility" Value="Visible"/>
                        <Setter Target="ShipTrackNumberTextBlock.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <!--<WindowsStateTriggers:NotEqualStateTrigger NotEqualTo="shipped" Value="{Binding OrderInfo.shipping.status}" />-->
                        <WindowsStateTriggers:RegexStateTrigger Expression="^shipped|delivered$" Value="{Binding OrderInfo.shipping.status}"  Options="IgnoreCase" />
                    </VisualState.StateTriggers>
                </VisualState>

                <!--Exibe ou oculta alguns controls de acordo com o FEEDBACK(PURCHASE) da compra -->
                <VisualState x:Name="VisualsFeedbackPurchase">
                    <VisualState.StateTriggers>
                        <WindowsStateTriggers:IsFalseStateTrigger Value="{Binding HasPurchaseFeedback}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="FeedBackPurchaseRating.Visibility" Value="Collapsed"/>
                        <Setter Target="FeedBackPurchaseMessage.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <!--Exibe ou oculta alguns controls de acordo com o FEEDBACK(SALE) da compra -->
                <VisualState x:Name="VisualsFeedbackSale">
                    <VisualState.Setters>
                        <Setter Target="FeedBackSaleRating.Visibility" Value="Collapsed"/>
                        <Setter Target="FeedBackSaleMessage.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <WindowsStateTriggers:IsFalseStateTrigger Value="{Binding HasSaleFeedback}" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <!--Exibe ou oculta alguns controls de acordo com o status da compra -->
                <VisualState x:Name="VisualsPayment">
                    <VisualState.Setters>
                        <Setter Target="CompletarCompraButton.Visibility" Value="Visible"/>
                        <Setter Target="VendedorBorder.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <WindowsStateTriggers:EqualsStateTrigger Value="{Binding OrderInfo.status}" EqualTo="payment_required"/>
                    </VisualState.StateTriggers>
                </VisualState>

                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  page header  -->
        <controls:PageHeader Content="Detalhe da compra" 
                             FontFamily="/Fonts/Roboto-Bold.ttf#Roboto"
                             Background="#FFFFD100" 
                             Foreground="Black">
            <controls:PageHeader.PrimaryCommands>
                <AppBarButton Label="Copiar dados da compra" Icon="Copy">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Command="{Binding CopyTrackingCode}" CommandParameter="TrackingCode" Text="Copiar código de rastreio" />
                            <MenuFlyoutItem Command="{Binding CopyTrackingCode}" CommandParameter="Email" Text="Copiar e-mail do vendedor" />
                            <MenuFlyoutSubItem Text="Outras opções">
                                <MenuFlyoutSubItem.Items>
                                    <MenuFlyoutItem Text="Rastrear mercadoria" Command="{Binding TrackOrder}"/>
                                </MenuFlyoutSubItem.Items>
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </controls:PageHeader.PrimaryCommands>
        </controls:PageHeader>

                                            <TransformGroup>
                                                <RotateTransform Angle="0" />
                                                <ScaleTransform ScaleX="1" ScaleY="1" />
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                </Grid>
                                <TextBlock x:Uid="ProdutoDetalhePageTextBlockFreteGratis"
                                           VerticalAlignment="Center"
                                           Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                                           Text="Frete grátis para todo Brasil" />
                            </StackPanel>
                            <TextBlock Margin="38,0,0,0" Text="{Binding ShippingExcludeRegions}" />
                        </StackPanel>
                        <!--  Envio (Frete pago)  -->
                        <Button Margin="15,10"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Background="{x:Null}"
                                Command="{Binding OpenShipping}"
                                Padding="0"
                                Style="{StaticResource ButtonStyle1}"
                                Visibility="{Binding SelectedProduct.shipping.free_shipping,
                                                     Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                            <StackPanel Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <Grid Margin="0,0,5,0">
                                        <Grid x:Name="backgroundGrid2"
                                              Width="32"
                                              Height="32"
                                              Visibility="Visible">
                                            <Ellipse x:Name="Fill2"
                                                     Fill="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                                                     Visibility="Visible" />
                                        </Grid>
                                        <Path Width="18"
                                              Height="18"

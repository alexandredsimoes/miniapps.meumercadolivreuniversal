            <!--  page content  -->
            <ScrollViewer x:Name="ParallaxRoot"
                          Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          VerticalScrollMode="Auto"
                          Visibility="{Binding ZoomMode,
                                               Converter={StaticResource InvertedBoolToVisibilityConverter}}">

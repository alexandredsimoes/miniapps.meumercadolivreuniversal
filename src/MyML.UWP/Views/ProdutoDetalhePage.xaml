                                    <TextBlock x:Uid="ProdutoDetalhePageTextBlockFretePago"
                                               VerticalAlignment="Center"
                                               Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                                               Text="Envio para todo Brasil" />
                                </StackPanel>
                                <TextBlock Margin="38,0,0,0" Text="{Binding ShippingExcludeRegions}" />
                            </StackPanel>
                        </Button>

                        <!--  Estado do produto  -->
                        <TextBlock Margin="15,0"
                                   Text="{Binding SelectedProduct.condition}"
                                   Visibility="Collapsed" />

                        <!--  Comprar  -->
                        <Button x:Uid="ProdutoDetalhePageButtonComprar"
                                Margin="15,10"
                                HorizontalAlignment="Stretch"
                                Content="Comprar"
                                Padding="8">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem x:Uid="ProdutoDetalhePageMenuItemWeb"
                                                    Command="{Binding BuyItem}"
                                                    CommandParameter="web"
                                                    Text="Pela web" />
                                    <!--<MenuFlyoutItem x:Uid="ProdutoDetalhePageMenuItemApp"
                                                    Command="{Binding BuyItem}"
                                                    CommandParameter="app"
                                                    Text="Pelo aplicativo" />-->
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <TextBlock Margin="15,0">
                            <Run Text="{Binding SelectedProduct.sold_quantity}" />
                            <Run x:Uid="ProdutoDetalhePageTextBlockVendidos" Text=" vendidos" />
                        </TextBlock>

                        <!--  Dados do vendedor  -->
                        <Button Margin="15,10"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Background="{x:Null}"
                                Command="{Binding DataContext.OpenOptions,
                                                  ElementName=ThePage}"
                                CommandParameter="seller_info"
                                Padding="0"
                                Style="{StaticResource ButtonStyle1}">
                            <StackPanel Margin="0,0,0,10" Padding="8,0,0,5">
                                <StackPanel.Background>
                                    <SolidColorBrush Color="{ThemeResource SystemChromeMediumColor}" />
                                </StackPanel.Background>
                                <TextBlock x:Uid="ProdutoDetalhePageTextBlockInfoVendedor"
                                           Margin="0,0,15,0"
                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                           Text="Informações do vendedor" />
                                <StackPanel Height="15"
                                            Margin="0,0,15,0"
                                            Orientation="Horizontal">
                                    <Rectangle Width="50"
                                               Height="{Binding SellerInfo.seller_reputation.level_id,
                                                                ConverterParameter=1_red,
                                                                Converter={StaticResource ReputationHeightConverter}}"
                                               Fill="#FFF00000" />
                                    <Rectangle Width="50"
                                               Height="{Binding SellerInfo.seller_reputation.level_id,
                                                                ConverterParameter=2_orange,
                                                                Converter={StaticResource ReputationHeightConverter}}"
                                               Fill="#FFF09800" />
                                    <Rectangle Width="50"
                                               Height="{Binding SellerInfo.seller_reputation.level_id,
                                                                ConverterParameter=3_yellow,
                                                                Converter={StaticResource ReputationHeightConverter}}"
                                               Fill="#FFFFE800" />
                                    <Rectangle Width="50"
                                               Height="{Binding SellerInfo.seller_reputation.level_id,
                                                                ConverterParameter=4_light_green,
                                                                Converter={StaticResource ReputationHeightConverter}}"
                                               Fill="#FFDCFF00" />
                                    <Rectangle Width="50"
                                               Height="{Binding SellerInfo.seller_reputation.level_id,
                                                                ConverterParameter=5_green,
                                                                Converter={StaticResource ReputationHeightConverter}}"
                                               Fill="#FF05DE2C" />
                                </StackPanel>

                                <TextBlock Margin="0,0,15,0" Text="{Binding SellerInfo.seller_reputation.power_seller_status, Converter={StaticResource UserStatusConverter}}" />

                                              AlignmentX="Center"
                                              AspectRatio="1.5"
                                              GradientOpacity="0.5"
                                              x:Name="Carousel"
                                              ItemClickCommand="{Binding OpenImage}"
                                              ItemsSource="{Binding ElementName=ThePage,
